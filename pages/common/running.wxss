.page__hd-play {
    width: 108rpx;
    height: 88rpx;
}

.page__hd-play:before {
    animation: lala 1s ease-in-out infinite;
    display: block;
    content: '';
    width: 4rpx;
    height: 48rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #fff 42rpx -20rpx 0 0px, #fff 70rpx -20rpx 0 0px;
}

@keyframes lala {
    0% {
        height: 48rpx;
    }

    50% {
        height: 24rpx;
    }

    100% {
        height: 48rpx;
    }
}

.page__hd-play:after {
    animation: test 1s ease-in-out infinite;
    display: block;
    content: '';
    width: 4rpx;
    height: 22rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #fff 28rpx -20rpx 0 0px, #fff 56rpx -20rpx 0 0px;
}

@keyframes test {
    0% {
        height: 22rpx;
    }

    50% {
        height: 46rpx;
    }

    100% {
        height: 22rpx;
    }
}



.page__hd-stop {
    width: 108rpx;
    height: 88rpx;
}

.page__hd-stop:before {
    display: block;
    content: '';
    width: 4rpx;
    height: 48rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #fff 42rpx -20rpx 0 0px, #fff 70rpx -20rpx 0 0px;
}



.page__hd-stop:after {

    display: block;
    content: '';
    width: 4rpx;
    height: 22rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #fff 28rpx -20rpx 0 0px, #fff 56rpx -20rpx 0 0px;
}
