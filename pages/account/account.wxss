.page{
    background-color: #E2E3E4;
}
.top{
    box-sizing: border-box;
    padding-top: 40rpx;
    background-color: #FFFFFF;
}
.headImg{
    display: flex;
    flex-direction:column;
}
.headImg image{
    height: 160rpx;
    width: 160rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
}
.headImg text{
    text-align: center;
    font-size: 36rpx;
    color: black;
}


.page__bd-mid{
    background-color: #FFFFFF;
}

.page__bd-midImage{
    width: 110rpx;
    height: 90rpx;
}

/* 中部列表的图片 */
.page__bd-midImage image{
    height: 40rpx;
    width: 40rpx;
}

.page__bd-midContent{
    font-size: 32rpx;
    box-sizing: border-box;
    height: 90rpx;
    width: 640rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #E2E3E4;
    display: flex;
    justify-content: space-between;
    color: #323233
}
.lastList{
    border-bottom: 0rpx;
}
.page__bd-contenNum{
    margin-right: 52rpx;
    color: #979798
}
/* weui框架，伪元素，中部列表中的'大于号' */
.page__bd-contenNum .weui-cell__ft_in-access:after{
    top:46rpx;
    right:-30rpx;
    height:16rpx;
    width:16rpx;
    border-color:E7E8E9;
}
.page__bd-mid:nth-child(1){
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.page__bd-mid:nth-child(5){
    margin-top: 20rpx;
}
.btnLeave button{
    margin-top:20rpx;
    background-color: #FFFFFF;
    border-radius: 0;
}
.btnLeave button:after{
    display: none;
}