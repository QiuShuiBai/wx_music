<image class='bg' src='../../images/test.png' mode="aspectFill" />
<view class="page">
    <view class="page__hd">
        <view class="page__hd-title">
            <text>跳舞的梵谷</text>
            <text>孙燕姿</text>
        </view>
    </view>

    <view class="page__bd"> 
        <!-- {{run==1?'runing':''}} -->
        <image  bindtap='zzz' src='../../images/playing/play_needle.png' mode='aspectFit' class="needle {{run==1?'runing':''}}" />
        <view class='disk_bg' bindtap='ccc'>
            <image src="../../images/playing/placeholder_disk_play_song.png" />
            <image src="../../images/playing/play_disc.png" />
        </view>
    </view>

    <view class="page__ft center">
        <view class='page__ft-icon center'>
            <image src="../../images/musicLove.png" />
            <image src="../../images/commit.png" />
            <image src="../../images/more.png" />
        </view>

        <view class='page__ft-control center'>
            <view class='page__ft-conTime'>
                <text>00:00</text>
                <text>11:11</text>
            </view>
            <view class='page__ft-conTri center'>
                <view class='page__ft-conIcon center'>
                    <image src='../../images/playing/refrain.png' />
                </view>
                <view class='page__ft-conPro'>
                    <image src='../../images/playing/play.png' bindtap='runing'/>
                    <progress percent="0" stroke-width="64" activeColor="#434343" backgroundColor="#E9EDF1" />
                </view>
                <view class='page__ft-conList center'>
                    <image src='../../images/playing/list.png' />
                </view>
            </view>
        </view>
    </view>
</view>