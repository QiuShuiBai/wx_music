<view class="page">
    <view class="page__hd center">
        <view class="page__hd-speak center">
            <image src="../../images/speak.png" />
        </view>

        <!-- hover-class="none"时，没有点击效果 -->
        <navigator hover-class="none">
            <view class="page__hd-search">
                <image src="../../images/search.png"/>
                <span>搜索音乐、视频、歌词、电台</span>
            </view>
        </navigator>

        <view class="page__hd-play"></view>

        <view class="swiper-tab" >
            <view class="swiper-tab-item" data-sss="0" bindtap="clickTab">
                <text class="{{currentTab==0?'active':''}}">音乐</text>
            </view>
            <view class="swiper-tab-item" data-sss="1" bindtap="clickTab">
                <text class="{{currentTab==1?'active':''}}" >视频</text>
            </view>
            <view class="swiper-tab-item" data-sss="2" bindtap="clickTab">
                <text class="{{currentTab==2?'active':''}}">电台</text>
            </view>
        </view>

    </view>

    <view class="page__bd" style="width:100%; padding-top:168rpx;">
        <swiper class="page__bd-swiper;" current="{{currentTab}}" bindchange="swiperTab" duration="0">
            <swiper-item class="page__bd-oneSwiper" >
                <swiper class="page__bd-oneSwiper-music" circular='true' autoplay='true' indicator-dots='true' interval='4000'>
                   <block wx:for="{{[1,2,3,4,5,6]}}">
                        <swiper-item>
                            {{item}}
                        </swiper-item>
                   </block>
                </swiper>

                <view class='page__bd-oneSwiper-selector'>
                    <block wx:for="{{[1, 2, 3, 4]}}">
                        <navigator hover-class="none" class='page__bd-selector-btn' url='../account/account'>
                            <view class='page__bd-selector-img'>

                            </view>
                            <view class='page__bd-selector-words'>歌单</view>
                        </navigator>
                    </block>
                </view>

                <view class='page__bd-oneSwiper-prope'>
                    <view class='page__bd-propr-title'>
                        <text>推荐歌单 ></text>
                    </view>

                    <view class='page__bd-propr-content'>
                        <block wx:for="{{[1, 2, 3, 4, 5, 6]}}">
                            <navigator hover-class="none" class='page__bd-prope-btn' url='../account/account'>
                                 <view class='page__bd-prope-img'>
                                    <image src='../../images/test.jpg' />
                                </view>
                                <view class='page__bd-prope-words'>
                                    <text>朋克青年的养生秘笈</text>
                                </view>
                            </navigator>
                        </block>
                    </view>
                </view>

                <view class='page__bd-oneSwiper-prope'>
                    <view class='page__bd-propr-title'>
                        <text>推荐歌单 ></text>
                    </view>

                    <view class='page__bd-propr-content'>
                        <block wx:for="{{[1, 2, 3, 4, 5, 6]}}">
                            <navigator hover-class="none" class='page__bd-prope-btn' url='../account/account'>
                                 <view class='page__bd-prope-img'>

                                </view>
                                <view class='page__bd-prope-words'>
                                
                                </view>
                            </navigator>
                        </block>
                    </view>
                </view>
            </swiper-item>


            <swiper-item>
                2
            </swiper-item>

            <swiper-item>
                3
            </swiper-item>
        </swiper>
    </view>

    <view class="page__ft">

    </view>
</view>