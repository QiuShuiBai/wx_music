.page__hd{
    background-color: #34393B;
    height: 88rpx;
    position: fixed;
    flex-wrap: wrap;
}
.page__hd_speak{
    width: 108rpx;
    height: 88rpx;
}
.page__hd_speak image{
    width: 38rpx;
    height: 44rpx;
}
.page__hd_search{
    width: 534rpx;
    height: 60rpx;
    border-radius: 40rpx;
    background-color: #FFFFFF;
    font-size: 28rpx;
    color: #BFBFBF;
    line-height: 60rpx;
    position: relative;
}
.page__hd_search image{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    left: 48rpx; 
    top: 14rpx;
}
.page__hd_search span{
  margin-left: 92rpx;
}
.page__hd_play{
    width: 108rpx;
    height: 88rpx;
}
.page__hd_play:before{
    animation: lala 1s ease-in-out infinite;
    display: block;
    content: '';
    width: 4rpx;
    height: 48rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #FFFFFF 42rpx -20rpx 0 0px,
     #FFFFFF 70rpx -20rpx 0 0px;
}
@keyframes lala{
  0%{
    height: 48rpx;
  }
  50%{
    height: 24rpx;
  }
  100%{
    height: 48rpx;
  }
} 
 .page__hd_play:after{
    animation: test 1s ease-in-out infinite;
    display: block;
    content: '';
    width: 4rpx;
    height: 22rpx;
    position: absolute;
    bottom: 0;
    box-shadow: #FFFFFF 28rpx -20rpx 0 0px,
      #FFFFFF 56rpx -20rpx 0 0px;
}

@keyframes test{
  0%{
    height: 22rpx;
  }
  50%{
    height: 46rpx;
  }
  100%{
    height: 22rpx;
  }
} 
.swiper-tab{
  width: 100%;
  height: 80rpx;
  background-color: #FFFFFF;
  line-height: 80rpx;
  display: flex;
}
.swiper-tab-item{
  text-align: center;
  flex: 1;
  font-size: 30rpx;
}