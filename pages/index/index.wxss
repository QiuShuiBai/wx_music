.page__bd{
   padding-top:168rpx;
}
.swiper-tab {
    width: 100%;
    height: 80rpx;
    background-color: #FFFFFF;
    line-height: 80rpx;
    display: flex;
}

.swiper-tab-item {
    text-align: center;
    flex: 1;
    font-size: 30rpx;
}
.swiper-tab-item text{
    display: inline-block;
    pointer-events: none;  
    color: #313638;
}
.active{
    border-bottom: 4rpx solid #313638;
}
.page__bd-swiper {
    height: 100vh; 
}

