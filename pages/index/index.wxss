.page__bd-selector-img {
    width: 96rpx;
    height: 96rpx;
    border: 2rpx solid #313638;
    border-radius: 50%;
    margin: 34rpx 44rpx 0; 
}
.page__bd-selector-img image{
    width: 48rpx;
    height: 48rpx;
}
/* 文字盒子 */
.page__bd-selector-words{
    margin: 0 44rpx; 
    font-size: 24rpx;
    width: 100rpx;
    text-align: center;
}
