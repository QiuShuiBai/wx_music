.page__bd-oneSwiper-selector{
    border-bottom: 1rpx solid #FBFCFD;
}
.page__bd-selector-btn {
    width: 188rpx;
    height: 208rpx;
    box-sizing: border-box;
    display: inline-block;
}

.page__bd-selector-btn:last-child {
    width: 186rpx;
}
